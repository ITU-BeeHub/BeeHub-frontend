{
  "name": "bee",
  "private": true,
  "version": "1.0.0",
  "description": "BeeHub - The Ultimate Platform for Istanbul Technical University (ITU) Students",
  "author": "BeeHub Team <info@beehubapp.com>",
  "type": "module",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "concurrently \"npm run start-frontend\" \"npm run start-backend\"",
    "dev": "concurrently \"npm run dev-frontend\" \"npm run start-backend\"",
    "dev-frontend": "electron-vite dev",
    "start-frontend": "electron-vite preview",
    "start-backend": "cd ../BeeHub-backend && go run cmd/beeHub/main.go",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@headlessui/react": "^2.1.2",
    "@heroicons/react": "^2.1.5",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@vitejs/plugin-react": "^4.3.1",
    "axios": "^1.7.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "electron-updater": "^6.3.9",
    "lucide-react": "^0.427.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0",
    "react-toastify": "^10.0.5",
    "sudo-prompt": "^9.2.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "use-debounce": "^10.0.4"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.8.0",
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "dmg-builder": "^25.0.5",
    "electron": "^31.3.1",
    "electron-builder": "^25.0.5",
    "electron-vite": "^2.3.0",
    "eslint": "^9.8.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.beehubapp.beehub",
    "productName": "BeeHub",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "out/main/**/*",
      "out/renderer/**/*",
      "out/preload/**/*",
      "index.html",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../BeeHub-backend/beehub.exe",
        "to": "backend/beehub.exe",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../BeeHub-backend/beehub-mac",
        "to": "backend/beehub-mac",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/beehubicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/bee.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
